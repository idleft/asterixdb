drop  dataverse test if exists;
create  dataverse test;
use test;

create type TweetType as open {
  id : int64,
  created_at : datetime
};

create type StoredTweetType as open {
  tid : uuid
};

create type CountryObservedType as open {
    obid : string,
    obcid : string,
    obcode: string
};

create dataset CountryObservedDataset1(CountryObservedType) primary key obid;
create dataset CountryObservedDataset2(CountryObservedType) primary key obid;
create dataset CountryObservedDataset3(CountryObservedType) primary key obid;
create dataset CountryObservedDataset4(CountryObservedType) primary key obid;
create dataset CountryObservedDataset5(CountryObservedType) primary key obid;

create function annotateTweet(x) {
 LET observedByClients1= ( select value ob1.obcid from CountryObservedDataset1 ob1 where ob1.obcode = x.country),
     observedByClients2= ( select value ob2.obcid from CountryObservedDataset2 ob2 where ob2.obcode = x.country),
     observedByClients3= ( select value ob3.obcid from CountryObservedDataset3 ob3 where ob3.obcode = x.country),
     observedByClients4= ( select value ob4.obcid from CountryObservedDataset4 ob4 where ob4.obcode = x.country),
     observedByClients5= ( select value ob5.obcid from CountryObservedDataset5 ob5 where ob5.obcode = x.country)
  select x.*, observedByClients1, observedByClients2, observedByClients3, observedByClients4, observedByClients5
};

create dataset Tweets1(StoredTweetType) primary key tid autogenerated;

create feed TweetFeed with {
    "adapter-name" : "expr_twitter",
    "type-name":"TweetType",
    "format" : "adm",
    "ingestion-location" : "asterix_nc1",
    "insert-feed" : true,
    "batch-size" : "15",
    "expr_amount" : 30,
    "country_coeff" : 20,
    "sdate" : "2008-01-01",
    "edate" : "2018-01-01",
    "slat" : "-180",
    "slong" : "-180",
    "elat" : "180",
    "elong" : "180",
    "numFriends" : "10000000",
    "statusesCount" : "10000000",
    "followersCount" : "10000000",
    "decouple" : true
};