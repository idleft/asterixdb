drop  dataverse feeds if exists;
create  dataverse feeds;
use feeds;

create type TweetType as open {
  id : int64
};

create type StoredTweetType as open {
  tid : uuid
};

create dataset Tweets2(StoredTweetType) primary key tid autogenerated;

//create dataset Tweets2(TweetType) primary key id;

create feed TweetFeed with {
  "adapter-name" : "expr_twitter",
  "type-name":"TweetType",
  "format" : "adm",
  "insert-feed" : true,
  "worker-num" : 1,
  "batch-size" : 1,
  "intake-pool-size" : 1,
  "storage-pool-size" : 1,
  "expr_amount" : 30000,
  "decouple" : true
};
