drop  dataverse test if exists;
create  dataverse test;
use test;

create type TweetType as open {
  id : int64
};

create type Country as open {
  country_code : string,
  country_name : string
};

create dataset Tweets1(TweetType) primary key id;
create dataset countryDataset(Country) primary key country_code;

create feed TweetFeed with {
  "adapter-name" : "expr_twitter",
  "ingestion-location":"asterix_nc1",
  "type-name":"TweetType",
  "format" : "adm",
  "intake-buffer" : 1,
  "expr_amount" : 1000
};

create function annotateCountry(x) {
    object_merge(x, {"q" : (select c from countryDataset c where c.country_code = x.country)})
};