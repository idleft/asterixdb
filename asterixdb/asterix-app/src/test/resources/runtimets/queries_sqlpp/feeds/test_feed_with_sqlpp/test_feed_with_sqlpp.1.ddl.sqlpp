drop  dataverse test if exists;
create  dataverse test;
use test;

create type Country as open {
  id: int64,
  country_code : string,
  country_name : string
};
create type TweetType as open {
  id : int64,
  country : string
};

create type StoredTweetType as open {
  tid : uuid
};

create dataset Tweets1(StoredTweetType) primary key tid autogenerated;
create dataset countryDataset(Country) primary key id;
create index code_idx on countryDataset(country_code);

create feed TweetFeed with {
  "adapter-name" : "expr_twitter",
  "type-name":"TweetType",
  "coff":1,
  "format" : "adm",
  "ingestion-location" : "asterix_nc1",
  "insert-feed" : true,
  "worker-num" : 1,
  "batch-size" : "325",
  "intake-pool-size" : 1,
  "storage-pool-size" : 1,
  "expr_amount" : 1000,
  "decouple" : true
};

create function annotateCountry(x) {
    object_merge(x, {"full-country" : (select value c.country_code from countryDataset c where x.country /*+indexnl*/ = c.country_code )})
};